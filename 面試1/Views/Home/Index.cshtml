@model IEnumerable<面試1.Models.Orders>

@{
    ViewBag.Title = "Index";
}

<h2>訂單列表</h2>

<p>
    @Html.ActionLink("建立訂單", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderID)
